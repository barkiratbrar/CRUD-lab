<h1>{{title}}</h1>
{{#if user}}
  <a href="/projects/add" class="btn btn-success mb-3">Add a new task</a>
{{/if}}

<table class="table table-striped table-hover">
  <thead>
    <th>Task Name</th>
    <th>Due Date</th>
    <th>Assigned Project</th>
    <th>Status</th>
    <th>Actions</th>
  </thead>
  <tbody>
    {{#each dataset}}
    <tr>
      <td>{{this.name}}</td>
      <td>{{toShortDate this.dueDate}}</td>
      <td>{{this.course}}</td>
      <td>{{this.status}}</td>
      <td>
        {{#if ../user}}
          <a href="/projects/edit/{{this._id}}" class="btn btn-primary btn-sm">Edit</a>
          <a href="/projects/delete/{{this._id}}" onclick="return confirmDeletion()" class="btn btn-danger btn-sm">Delete</a>
        {{/if}}
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

<script>
  function confirmDeletion() {
    return confirm('Are you sure you want to delete this task?');
  }
</script>
